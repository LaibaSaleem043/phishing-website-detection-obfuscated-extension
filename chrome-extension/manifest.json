{
  "manifest_version": 3,
  "name": "Phishing Website Detection",
  "version": "1.0.0",
  "description": "Detect phishing websites using AI-powered analysis",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

